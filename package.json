{
  "name": "math",
  "private": true,
  "version": "0.1.0",
  "description": "Gamedev math libary",
  "keywords": [
    "math",
    "gamedev"
  ],
  "author": "Marco Kammer",
  "homepage": "https://github.com/kamm3r/math",
  "repository": "https://github.com/kamm3r/math",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js"
  },
  "scripts": {
    "test": "vitest",
    "typecheck": "tsc --noEmit --strict",
    "build": "rm -rf dist && swc src -d dist",
    "build:fast": "pnpm build && pnpm typecheck",
    "build:es": "rm -rf dist && esbuild ./src/index.ts --outdir=dist --platform=neutral --target=es2020 --minify --bundle --format=esm",
    "build:faster": "pnpm build:es && pnpm typecheck"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.23",
    "@types/node": "^18.11.15",
    "esbuild": "^0.16.7",
    "typescript": "^4.9.4",
    "vitest": "^0.25.8"
  }
}
